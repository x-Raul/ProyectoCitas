@model Citas_.Models.Vehiculos

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Vehiculo</h2>
<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <br />
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Vehiculo</h4>
            </div>
            <br />
            <div class="panel-body">
                <div class="alert alert-danger">
                    Quieres eliminar el Vehiculo: #@Html.DisplayTextFor(m => m.Id) con fecha de @Html.DisplayTextFor(m => m.Modelo)
                </div>

                <form action="@Url.Action("Delete","Vehi")" method="post">
                    <input type="hidden" class="form-control" name="id" value="@Html.DisplayTextFor(m => m.Id)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Index","Vehi")">Volver</a>
                </form>


            </div>
        </div>

    </div>
</div>
