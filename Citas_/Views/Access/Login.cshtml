@model Citas_.Models.Usuarios

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <br />
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Iniciar Session</h4>
            </div>
            <br />
            <div id="alert-message" class="alert" style="display:none"></div>
            <div class="panel-body">
                <form id="appointment-form" action="@Url.Action("Login","Access")" method="post">

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="Email" id="Email"/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Pass" id="Pass" />
                    </div>
                    <p></p>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                    <p></p>
                    <button type="submit" class="btn btn-primary" id="btnEnviar">Iniciar Sesion</button>
                    <a class="btn btn-warning"  href="@Url.Action("SignUp","Access")">Crear Cuenta</a>
                </form>

            </div>
        </div>

    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $("#btnEnviar").click(function () {
                var email = $("#Email").val();
                var pass = $("#Pass").val();

                if (email == "" || pass == "") {
                    alert("Todos los campos son obligatorios.");
                    return false;
                }

                return true;
            });
        });
    </script>
}